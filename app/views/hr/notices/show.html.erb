<h1 class = "text-center">Notice</h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Subject</th>
      <th scope="col">Description</th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @notice.subject %></td>
      <td><%= @notice.description %></td>
      <td><%= button_to "Delete", hr_notice_path(@notice.id), method: :delete, class: "btn btn-secondary" %></td>
      <td><%= button_to "Edit", edit_hr_notice_path, method: :get, class: "btn btn-secondary" %> </td>
    </tr>
  </tbody>
</table>