<% role = current_employee.roles.first.name%>
<%= form_with model: [role.to_sym, @issue] do |form|%>

  <div class="field">
  &nbsp;
    <%= form.label :subject %><br />
    &nbsp;
    <%= form.text_field :subject, autocomplete: "subject", :required => true %>
  </div>

  <div class="field">
  &nbsp;
    <%= form.label :description %><br />
    &nbsp;
    <%= form.text_field :description, autocomplete: "description", :required => true %>
  </div>

  <div class="field">
  &nbsp;
    <%= form.label :priority %><br />
    &nbsp;
    <%= form.select :priority, ['High', 'Moderate','Low']%>
  </div>
&nbsp;
  <div class="actions">
  &nbsp;
    <%= form.submit "Submit", class: "btn btn-secondary" %>
  </div>
<% end%>