<h1 class = "text-center">Employee</h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Employee Id</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Post</th>
      <% if @employee.manager.present?%>
        <th scope="col">employee</th>
      <%end%>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @employee.id %></td>
      <td><%= @employee.name %></td>
      <td><%= @employee.email %></td>
      <td><%= @employee.post %></td>
      <% if @employee.manager.present?%>
        <td scope="col"><%= @employee.manager.name%></td>
      <%end%>
    </tr>
  </tbody>
</table>
