<h1 class = "text-center">Projects</h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">S.No.</th>
      <th scope="col">Project</th>
      <th scope="col">Deadline</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <%i = 1%>
  <% @projects.each do |project| %>
  <tbody>
    <tr>
      <th scope="row"><%= i %></th>
      <td><%= project.project_name %></td>
      <th><%= project.project_deadline %></th>
      <th><a href="/employee/projects/<%=project.id%>" class="link-dark">View</a></th>
    </tr>
  </tbody>
  <% i += 1 %>
<% end %>
</table>